#parse("layout.vm")
#@layout("Books")
<h1>Books with Paternoster Attestations</h1>
#foreach($bookType in $books)
<h2>$bookType.name</h2>
#foreach($book in $bookType.books)
    <p>
#if($book.author)
    $book.author &ndash;
#end
    #if($book.full_title)
    <a href="/$book.outPath">$book.full_title</a>
    #else
    <a href="/$book.outPath">$book.title</a>
    #end
    ($book.year)
    </p>
#end
#end
#end
