#parse("layout.vm")
#macro(renderFamily $family)
#if($family.name)
<li>$family.name</li>
#end

<ul>
#foreach($subFamily in $family.subFamilies)
#renderFamily($subFamily)
#end
#foreach($language in $family.languages)
    <li><a href="/$language.outPath">$language.name</a></li>
#end
</ul>
#end

